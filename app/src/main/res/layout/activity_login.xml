<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fundo_amarelo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eng.planoestudos.CodeTelas.LoginActivity">


    <ImageView
        android:id="@+id/id_ivLogoLogin"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@drawable/logo"
        android:scaleType="fitCenter" />

    <RelativeLayout


        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/id_rlLogin"
        android:layout_below="@+id/id_ivLogoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout

            android:id="@+id/id_llLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/id_etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_login"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/letra" />

            <EditText
                android:id="@+id/id_etSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_senha"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColorHint="@color/letra" />

        </LinearLayout>

        <Button
            android:id="@+id/id_btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_llLogin"
            android:layout_marginTop="20dp"
            android:background="@drawable/redondado"
            android:text="Login"
            android:textColor="@color/letra"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/id_btnEsqueceusenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="Esqueceu sua senha?"
            android:textAllCaps="false"
            android:textColor="@color/letra" />

        <Button
            android:id="@+id/id_btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:text="Registrar-se"
            android:textAllCaps="false"
            android:textColor="@color/letra" />


    </RelativeLayout>


</RelativeLayout>